<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.moviles.workinonit.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textViewNameFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textStyle="bold"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finished"
        android:id="@+id/checkBoxFrag"
        android:checked="false"
        android:layout_below="@+id/textViewNameFrag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start:"
        android:id="@+id/textViewStartFrag"
        android:textColor="@android:color/holo_green_dark"
        android:paddingLeft="15dp"
        android:layout_weight="0.04"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/checkBoxFrag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Finish:"
        android:id="@+id/textViewFinishFrag"
        android:paddingLeft="15dp"
        android:textColor="@color/design_textinput_error_color_light"
        android:layout_weight="0.04"
        android:layout_below="@+id/textViewStartFrag"
        android:layout_alignLeft="@+id/textViewStartFrag"
        android:layout_alignStart="@+id/textViewStartFrag"/>

    <TextView
        android:id="@+id/textViewDescFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textStyle="bold"
        android:text="Description : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewFinishFrag"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewDesc2Frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Enter Description "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="italic"
        android:textSize="20dp"
        android:layout_below="@+id/textViewDescFrag"
        android:layout_alignLeft="@+id/textViewFinishFrag"
        android:layout_alignStart="@+id/textViewFinishFrag"/>

</RelativeLayout>
